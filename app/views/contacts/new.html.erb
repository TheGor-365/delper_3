<div class="container mt-5 mb-5">
  <h1 class="mb-3">
    Contact us
  </h1>

  <div>
    <%= form_for :contact, url: contacts_path, class: 'was-validated' do |f| %>
      <% if @contact && @contact.errors.any? %>
      <div class="border rounded border-danger p-3 col-md-8 mb-3">
        <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="border rounded p-5 text-muted col-md-8 mb-3">
        <h4>
          <%= f.label :email, class: 'form-group' %>
        </h4>
        <%= f.text_field :email, class: 'form-control is-invalid', autofocus: true %>
        <div class="invalid-feedback">
          Please add email
        </div>
      </div>

      <div class="border rounded p-5 text-muted col-md-8 mb-3">
        <h3>
          <%= f.label :message, class: 'form-group' %>
        </h3>
        <%= f.text_area :message, class: 'form-control is-invalid', rows: '5' %>
        <div class="invalid-feedback">
          Please add message
        </div>
      </div>

      <div>
        <%= f.submit 'Send message', class: 'btn btn-primary btn-large' %>
      </div>
    <% end %>
  </div>
</div>
