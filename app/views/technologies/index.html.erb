<div class="container mt-5 mb-5">
  <h1 class="mb-3">
    Technologies
  </h1>

  <% @technologies.each do |technology| %>
    <div class="border rounded p-3 mb-3">
      <h2>
        <%= technology.title %>
      </h2>
    </div>

    <div class="border rounded p-3 mb-3">
      <p>
        <%= technology.purpose %>
      </p>

      <small class="text-muted">
        <%= technology.description %>
      </small>
    </div>

    <div class="border rounded p-3 mb-3">
      <%= technology.doc_link %>
    </div>

    <div class="border rounded p-3 mb-4 col-md-2">
      <%= technology.global_rating %>
    </div>

    <div class="row">
      <%= link_to 'Show', technology_path(technology), class: 'btn btn-primary btn-sm m-2' %>
      <%= link_to 'Edit', edit_technology_path(technology), class: 'btn btn-primary btn-sm m-2' %>
    </div>

    <hr>
  <% end %>
</div>
